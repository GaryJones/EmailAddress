{
    "name": "gamajo/email-address",
    "description": "Value Object representing an email address.",
    "keywords": [
        "email address"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Gary Jones",
            "homepage": "https://gamajo.com"
        }
    ],
    "require": {
        "php": "^7 || ^8"
    },
    "require-dev": {
        "phpunit/phpunit": "^6 || ^7 || ^8 || ^9",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "phpcompatibility/php-compatibility": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Gamajo\\EmailAddress\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gamajo\\EmailAddress\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "./vendor/bin/phpcs",
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
